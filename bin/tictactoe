#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Would you like to play a game?"
game=Game.new
until game.won?
	game.play
end


puts "Would you like to play again(y/n)?"
again=gets.strip
	if again== "y"
		game=Game.new
		until game.won?
			game.play
		end
	else
		abort("It was a pleasure playing!")
	end
 	
